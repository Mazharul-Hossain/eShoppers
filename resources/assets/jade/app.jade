doctype html
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title Oneline - Light-weight quote share and discovery
  body
    h1 Oneline
    // POST quote
    section
      p POST quote/
      form(action="quote", method="POST")
        // used != instead of = for value to prevent auto escape
        input(type="hidden", name="_token", value!="<?php echo csrf_token(); ?>")
        div
          label(for="quote") Quote: 
          input#quote(type="text", name="quote")
        div
          label(for="author") Author: 
          input#author(type="text", name="author")
        div
          label(for="image") Image: 
          input#image(type="text", name="image")
        button(type="submit") submit
    // GET quote
    section
      p GET quote/
      a(href="quote") get a list of quotes
    // GET quote/:id
    section
      p GET quote/1
      a(href="quote/1") get quote with id = 1